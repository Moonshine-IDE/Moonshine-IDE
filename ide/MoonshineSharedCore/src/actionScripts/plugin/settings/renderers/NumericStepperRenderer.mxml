<s:HGroup 
	xmlns:fx="http://ns.adobe.com/mxml/2009"
  	xmlns:s="library://ns.adobe.com/flex/spark"
  	xmlns:mx="library://ns.adobe.com/flex/mx"
	
	width="100%"
	paddingLeft="15"
	paddingRight="15"
	creationComplete="{stepper.value = setting.value}">
	
	<fx:Script>
		<![CDATA[
			import actionScripts.plugin.settings.vo.NumericStepperSetting;
		
			[Bindable]
			public var setting:NumericStepperSetting;
			
			private function commitValue():void
			{
				if ( !isNaN(stepper.value) )
				{
					setting.value = stepper.value;
				}  
			}
			
			private function focusIn():void
			{
				stepper.setFocus();
			}
			
		]]>
	</fx:Script>
	
	<s:Label styleName="uiTextSettingsLabel"
		paddingTop="15"
		paddingBottom="15"
		text="{setting.label}"
		mouseDown="focusIn()" />
		
	<mx:Spacer width="100%"/>
	
	<mx:NumericStepper id="stepper"
		minimum="{setting.minimum}"
		maximum="{setting.maximum}"
		stepSize="{setting.stepSize}"
		change="commitValue()" />
	
</s:HGroup>