              "tabFilter": {
                "description": "Only attach to tabs whose URL matches this",
                "type": [
                  "string",
                  "array",
                  "object"
                ],
                "items": {
                  "type": "string"
                },
                "properties": {
                  "include": {
                    "description": "URLs to attach to",
                    "type": [
                      "string",
                      "array"
                    ],
                    "items": {
                      "type": "string"
                    },
                    "default": "*"
                  },
                  "exclude": {
                    "description": "URLs not to attach to",
                    "type": [
                      "string",
                      "array"
                    ],
                    "items": {
                      "type": "string"
                    },
                    "default": []
