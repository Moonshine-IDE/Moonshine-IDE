<?xml version="1.0"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">
    <profiles>
        
        <!-- For on-disk-projects:  https://github.com/OpenNTF/org.openntf.nsfodp -->
        <profile>
            <id>nsfodp</id>
            <properties>
                <!-- for local operations -->
                <notes-program>$NOTES_INSTALLATION_PATH</notes-program>
                <notes-platform>file:///$UPDATE_SITE_PATH</notes-platform>
            </properties>
        </profile>
        
        
    </profiles>
    <activeProfiles>
        <activeProfile>nsfodp</activeProfile>
    </activeProfiles>
</settings>